    <title>Abioka DDD Template</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="shortcut icon" href="images/favicon.png">
    <base href="/">
    <!-- inject:css -->
    <!-- endinject -->
</head>
<body ng-app="abioka" ng-controller="MainController as vm">
    <div class="full-page" ab-data-img layout="row">
        <menu menu-items="vm.menuItems" toggle-menu="vm.toggleMenu(menuItem)" is-signed-in="vm.user.IsSignedIn"></menu>
        <div layout="column" flex>
            <toolbar></toolbar>
            <md-content md-scroll-y layout="column" flex>
                @RenderBody()
            </md-content>
        </div>
        <back-img class="full-page-background"></back-img>
    </div>
    <!-- lib:js -->
    <!-- endinject -->
    <!-- app:js -->
    <!-- endinject -->

